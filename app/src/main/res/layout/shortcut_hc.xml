<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:padding="5dp"
    android:background="@color/transparent_white"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_poptop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_popular"
        android:fontFamily="@font/inter_700"
        android:maxWidth="240dp"
        android:paddingVertical="14dp"
        android:paddingHorizontal="14dp"
        android:text="@string/popular_topics"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tv_topic_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_topic"
        android:maxWidth="240dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="14dp"
        android:lineSpacingMultiplier="1.25"
        android:text="@string/tv_topic_1"
        android:textColor="@color/white"
        android:fontFamily="@font/museo_sans_300"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_poptop_title"
        app:layout_constraintStart_toStartOf="@+id/tv_poptop_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_poptop_title"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tv_topic_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_topic"
        android:maxWidth="240dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="14dp"
        android:lineSpacingMultiplier="1.25"
        android:text="@string/tv_topic_2"
        android:textColor="@color/white"
        android:fontFamily="@font/museo_sans_300"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_topic_1"
        app:layout_constraintStart_toStartOf="@+id/tv_topic_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_topic_1"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tv_topic_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_topic"
        android:maxWidth="240dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="14dp"
        android:lineSpacingMultiplier="1.25"
        android:text="@string/tv_topic_3"
        android:textColor="@color/white"
        android:fontFamily="@font/museo_sans_300"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_topic_2"
        app:layout_constraintStart_toStartOf="@+id/tv_topic_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_topic_2"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tv_topic_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_topic"
        android:maxWidth="240dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="14dp"
        android:lineSpacingMultiplier="1.25"
        android:text="@string/tv_topic_4"
        android:textColor="@color/white"
        android:fontFamily="@font/museo_sans_300"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_topic_3"
        app:layout_constraintStart_toStartOf="@+id/tv_topic_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_topic_3"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>