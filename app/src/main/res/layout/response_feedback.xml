<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/response_feedback"
        android:text="@string/tv_feedback_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_bot"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/inter_700"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:showDividers="middle"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/response_feedback">

        <TextView
            android:id="@+id/btn_prompt_no"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_user"
            android:layout_marginEnd="14dp"
            android:paddingVertical="14dp"
            android:text="@string/no"
            android:textAlignment="center"
            android:textColor="@color/blue_300"
            android:fontFamily="@font/inter_400"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/btn_prompt_yes"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_bot"
            android:paddingVertical="14dp"
            android:text="@string/yes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_400"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>