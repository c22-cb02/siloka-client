<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Siloka" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_300</item>
        <item name="colorSecondaryVariant">@color/gray_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Siloka.TextInputLayout.Style</item>
        <item name="materialButtonStyle">@style/Siloka.Button.Filled.Style</item>
        <item name="editTextStyle">@style/Siloka.TextInputEditText.Style</item>
        <item name="actionOverflowButtonStyle">@style/IconOverflow</item>
    </style>

    <!--  Custom Buttons  -->
    <style name="Siloka.Button.Filled.Style"
        parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_500</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="IconOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <!--  Custom TextInputFields  -->
    <style name="Siloka.TextInputLayout.Style"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">@color/blue_300</item>
        <item name="boxBackgroundColor">@color/input_background</item>
    </style>

    <style name="Siloka.TextInputEditText.Style"
        parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/inter_400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_500</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorOnSurface">@color/gray_500</item>
        <item name="colorError">@color/pink_500</item>
    </style>

    <!--  Override Android 12 API SplashScreen  -->
    <style name="Siloka.RemoveSplashScreen" parent="@style/Theme.Siloka">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>